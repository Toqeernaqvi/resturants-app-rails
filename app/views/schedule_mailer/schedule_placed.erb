<%= render 'layouts/header' %>
<p style="margin-left: auto; text-align: right; font: normal normal 500 16px/22px helvetica; letter-spacing: 0px; color: #FFFFFF; opacity: 1;">
</p>
</div>
</td>
</tr>
<tr>
    <td>
        <div style=" background-color: #fff; box-shadow: 0px 3px 26px #0000000A; width: 85%; z-index: 1; margin: auto; border-radius:20px; padding: 30px 20px;">

            <table style="margin:0 auto; width: 100%;" cellspacing="0" cellpadding="0">
                <tr>
                    <td>
                        <p style="margin: 0; font: normal normal 500 22px/32px helvetica; letter-spacing: 0px; color: #1F1F1F; opacity: 1;text-align: center;">
                             <%=@header%>
                        </p>
                    </td>
                </tr>
                <tr>
                    <td>
                        <p style=" margin: 0; text-align: center; font: normal normal normal 16px/22px helvetica; letter-spacing: 0px; color: #1F1F1F; opacity: 1;">
                          <%= @runningmenu.runningmenu_name.capitalize %> 
                          <%= image_tag("#{ENV['CLOUDFRONT_URL']}/icons/#{@runningmenu.runningmenu_type}-btn.png") %>
                        </p>
                    </td>
                </tr>
            </table>


            <table style="table-layout: fixed; width: 100%;">
                <tr>
                    <td>
                        <p style="margin:20px 0 0 0; text-align: left; font: normal normal 500 13px/22px helvetica; letter-spacing: 0px; color: #212529; opacity: 1;">
                            Requested By :
                        </p>
                        <p style="margin: 0;text-align: left; font: normal normal normal 14px/20px helvetica; letter-spacing: 0px; color: #646464; opacity: 1;">
                             <%=@runningmenu.user.name%> (<%=@runningmenu.company.name%>)
                        </p>
                    </td>
                    <td>
                      <% if @header.include? "New Marketplace Delivery Scheduled" %>
                        <p style="margin:20px 0 0 0; text-align: left; font: normal normal 500 13px/22px helvetica; letter-spacing: 0px; color: #212529; opacity: 1;">
                            Selected Restaurant :
                        </p>
                      <% else %>
                        <p style="margin:20px 0 0 0; text-align: left; font: normal normal 500 13px/22px helvetica; letter-spacing: 0px; color: #212529; opacity: 1;">
                            Recommended Restaurant :
                        </p>
                      <% end %>
                      <% if @runningmenu.addresses.blank? %>
                        <p style="margin: 0; text-align: left; font: normal normal normal 14px/20px helvetica; letter-spacing: 0px; color: #218655; opacity: 1;">
                           No restaurabt recommended
                        </p>
                      <% else%>
                        <p style="margin: 0; text-align: left; font: normal normal normal 14px/20px helvetica; letter-spacing: 0px; color: #218655; opacity: 1;">
                             <%=@runningmenu.addresses.last.name&.capitalize %>
                        </p>
                      <% end %>
                    </td>
                </tr>

                <tr>
                    <td>
                        <p style="margin:20px 0 0 0; text-align: left; font: normal normal 500 13px/22px helvetica; letter-spacing: 0px; color: #212529; opacity: 1;">
                            Approximate Count :
                        </p>
                        <p style="margin: 0; text-align: left; font: normal normal normal 14px/20px helvetica; letter-spacing: 0px; color: #646464; opacity: 1;">
                            <%=@runningmenu.orders_count%></p>
                    </td>
                    <td>
                        <p style="margin:20px 0 0 0; text-align: left; font: normal normal 500 13px/22px helvetica; letter-spacing: 0px; color: #212529; opacity: 1;">
                            Budget :
                        </p>
                        <p style="margin: 0; text-align: left; font: normal normal normal 14px/20px helvetica; letter-spacing: 0px; color: #646464; opacity: 1;">
                           $<%=@runningmenu.per_meal_budget%>
                        </p>
                    </td>
                </tr>

                <tr>
                    <td>
                        <p style="margin:20px 0 0 0; text-align: left; font: normal normal 500 13px/22px helvetica; letter-spacing: 0px; color: #212529; opacity: 1;">
                            Cuisine Preference :
                        </p>
                        <p style="margin: 0; text-align: left; font: normal normal normal 14px/20px helvetica; letter-spacing: 0px; color: #646464; opacity: 1;">
                            <%=@runningmenu.cuisines.pluck(:name).join(',')%>
                        </p>
                    </td>
                    <td>
                        <p style="margin:20px 0 0 0; text-align: left; font: normal normal 500 13px/22px helvetica; letter-spacing: 0px; color: #212529; opacity: 1;">
                            Special Request :
                        </p>
                        <p style="margin: 0; text-align: left; font: normal normal normal 14px/20px helvetica; letter-spacing: 0px; color: #646464; opacity: 1;">
                            <%=@runningmenu.special_request%>
                        </p>
                    </td>
                </tr>

                <tr>
                    <td>
                        <p style="margin:20px 0 0 0; text-align: left; font: normal normal 500 13px/22px helvetica; letter-spacing: 0px; color: #212529; opacity: 1;">
                            Delivery Date :
                        </p>
                        <p style="margin: 0; text-align: left; font: normal normal normal 14px/20px helvetica;padding-right: 20px; letter-spacing: 0px; color: #646464; opacity: 1;">
                            <%=@runningmenu.runningmenu_type&.capitalize%> <%=@runningmenu.menu_type&.capitalize%>
                        </p>
                    </td>
                    <td>
                        <p style="margin:20px 0 0 0; text-align: left; font: normal normal 500 13px/22px helvetica; letter-spacing: 0px; color: #212529; opacity: 1;">
                            Delivery Address :
                        </p>
                        <p style="margin: 0; text-align: left; font: normal normal normal 14px/20px helvetica;padding-right: 20px; letter-spacing: 0px; color: #646464; opacity: 1;">
                           <%=@runningmenu.address.location_with_name%>
                        </p>
                    </td>
                </tr>

                <tr>
                    <td>
                        <p style="margin:20px 0 0 0; text-align: left; font: normal normal 500 13px/22px helvetica; letter-spacing: 0px; color: #212529; opacity: 1;">
                            Delivery Instructions :
                        </p>
                        <p style="margin: 0; text-align: left; font: normal normal normal 14px/20px helvetica; letter-spacing: 0px; color: #646464; opacity: 1;">
                           <%= @runningmenu.delivery_instructions %>
                        </p>
                    </td>
                </tr>


                <tr>
                    <td>
                       <% if @runningmenu.company.fields.active.present? %>
                        <table style="width: 200%; table-layout: fixed;">
                            <tr>
                                <td>
                                    <p style="margin:20px 0 0 0; font: normal normal 500 22px/32px helvetica; letter-spacing: 0px; color: #1F1F1F; opacity: 1;text-align: center;">
                                        Meeting Specifics
                                    </p>
                                </td>
                            </tr>
                        </table>
                        <% end %>
                    </td>
                </tr>
                <tr>
                   <% @runningmenu.company.fields.active.order(position: :asc).each do |c_field| %>  
                    <td>
                        <p style="margin:20px 0 0 0; text-align: left; font: normal normal 500 13px/22px helvetica; letter-spacing: 0px; color: #212529; opacity: 1;">
                            <%=c_field.name %>:
                        </p>
                        <% runningmenu_field = Runningmenufield.find_by(runningmenu_id: @runningmenu.id, field_id: c_field.id)%>
                        <p style="margin: 0; text-align: left; font: normal normal normal 14px/20px helvetica; letter-spacing: 0px; color: #212529; opacity: 1;">
                          <% if c_field.dropdown?  %>
                          <%= runningmenu_field.present? && runningmenu_field.fieldoption.present? ? runningmenu_field.fieldoption.name : '' %>
                          <% else %>
                          <%=  runningmenu_field.present? && runningmenu_field.value.present? ? runningmenu_field.value : '' %>
                          <% end %>
                        </p>
                    </td>
                    <% end %>
                </tr>

                <tr>
                    <td>
                        <a href="<%=ENV['BACKEND_HOST']%>/admin/schedulers/<%=@runningmenu.id%>" style="margin:30px 0 0 0;display: inline-block; text-decoration: none; text-align: left; font: normal normal 500 15px/21px helvetica; letter-spacing: 0px; color: #157FFC; opacity: 1;">
                          Scheduler Details&nbsp;
                          <%= image_tag("#{ENV['CLOUDFRONT_URL']}/icons/link.png") %>
                        </a>
                    </td>
                </tr>

            </table>

        </div>
    </td>
</tr>
</table>
</td>
</tr>
<%= render 'layouts/footer' %>


