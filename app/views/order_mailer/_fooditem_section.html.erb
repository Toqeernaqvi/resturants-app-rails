<% section[:fooditems].each do |fooditem| %>
<tr>
   <td>
      <div style="width:100%;max-width:400px; margin: 0 auto;box-shadow: 0px 3px 26px #0000000A;border-radius: 20px; ">
         <img src="<%= fooditem['image_url'] %>" alt="food-image" style="display: <%= fooditem["image_url"].blank? ? 'none' : 'block' %>; height:150px; width:100%;border-top-left-radius: 20px; border-top-right-radius: 20px; margin-top: 10px; object-fit: cover;  ">
         <div style="display: flex; padding: 5px 20px; width:100%">
            <div style="width:92%">
               <p style=" margin:0; text-align: left; font: normal normal normal 23px/33px helvetica; letter-spacing: 0px; color: #1F1F1F; opacity: 1;float:left;">
               <%= fooditem["name"] %>
            </p>
            <!-- <p style="margin:0; text-align: center; font: normal normal normal 23px/33px helvetica; letter-spacing: 0px; color: #1F1F1F; opacity: 1;float:right;">
               $<%#= fooditem["price"] %>
            </p>-->
            </div>
         </div>
         <p style="padding: 0 20px 20px; margin: 0; text-align: left; font: normal normal normal 16px/22px helvetica; letter-spacing: 0px; color: #A8A8A8; opacity: 1;">
            <%= fooditem["name"] %> from <%= fooditem["restaurant_name"] %>
         </p>
      </div>
   </td>
</tr>
<% end %>