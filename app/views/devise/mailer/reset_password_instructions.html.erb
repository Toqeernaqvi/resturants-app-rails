<% confirmation_link = "#{ENV['BACKEND_HOST']}/admin/password/edit?reset_password_token=#{@token}" %>
<% else %>
<% confirmation_link = "#{ENV['BACKEND_HOST']}/api/v1/auth/password/edit?config=#{message['client-config'].to_s}&amp;redirect_url=#{message['redirect-url'].to_s}&amp;reset_password_token=#{@token}" %>
<% end %>
